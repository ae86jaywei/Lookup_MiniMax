<Window x:Class="ZWDynLookup.UI.LookupTableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ZWDynLookup.UI"
        Title="特性查寻表配置" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="70"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 查寻表标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="特性查寻表配置" Style="{StaticResource HeaderStyle}"/>
            <TextBlock Text="配置输入特性和查寻特性的映射关系" Foreground="Gray"/>
        </StackPanel>
        
        <!-- 工具栏 -->
        <ToolBar Grid.Row="1" Margin="0,0,0,10">
            <Button Name="btnAddInputProperty" Content="添加输入特性" Style="{StaticResource ButtonStyle}" Click="BtnAddInputProperty_Click"/>
            <Button Name="btnAddLookupProperty" Content="添加查寻特性" Style="{StaticResource ButtonStyle}" Click="BtnAddLookupProperty_Click"/>
            <Separator/>
            <Button Name="btnEditParameter" Content="编辑参数" Style="{StaticResource ButtonStyle}" Click="BtnEditParameter_Click"/>
            <Button Name="btnDeleteParameter" Content="删除参数" Style="{StaticResource ButtonStyle}" Click="BtnDeleteParameter_Click"/>
            <Separator/>
            <Button Name="btnExport" Content="导出配置" Style="{StaticResource ButtonStyle}" Click="BtnExport_Click"/>
            <Button Name="btnImport" Content="导入配置" Style="{StaticResource ButtonStyle}" Click="BtnImport_Click"/>
        </ToolBar>
        
        <!-- 主要内容区域 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 输入特性面板 -->
            <GroupBox Grid.Column="0" Header="输入特性">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBox Name="txtInputFilter" Width="150" Height="22" Margin="0,0,5,0" 
                                 TextChanged="TxtInputFilter_TextChanged"
                                 ToolTip="输入特性名称过滤"/>
                        <Button Name="btnClearInputFilter" Content="清除" Width="50" Height="22" Click="BtnClearInputFilter_Click"/>
                    </StackPanel>
                    
                    <DataGrid Name="dgInputProperties" Grid.Row="1" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="特性名称" Binding="{Binding PropertyName}" Width="120"/>
                            <DataGridTextColumn Header="数据类型" Binding="{Binding DataType}" Width="80"/>
                            <DataGridTextColumn Header="默认值" Binding="{Binding DefaultValue}" Width="100"/>
                            <DataGridTextColumn Header="描述" Binding="{Binding Description}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
            
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
            
            <!-- 查寻特性面板 -->
            <GroupBox Grid.Column="2" Header="查寻特性">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBox Name="txtLookupFilter" Width="150" Height="22" Margin="0,0,5,0" 
                                 TextChanged="TxtLookupFilter_TextChanged"
                                 ToolTip="查寻特性名称过滤"/>
                        <Button Name="btnClearLookupFilter" Content="清除" Width="50" Height="22" Click="BtnClearLookupFilter_Click"/>
                    </StackPanel>
                    
                    <DataGrid Name="dgLookupProperties" Grid.Row="1" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="特性名称" Binding="{Binding PropertyName}" Width="120"/>
                            <DataGridTextColumn Header="数据类型" Binding="{Binding DataType}" Width="80"/>
                            <DataGridTextColumn Header="默认值" Binding="{Binding DefaultValue}" Width="100"/>
                            <DataGridTextColumn Header="描述" Binding="{Binding Description}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </Grid>
        
        <!-- 参数特性网格 -->
        <GroupBox Grid.Row="3" Header="参数特性配置" Margin="0,10,0,10">
            <local:PropertyGridControl x:Name="propertyGrid"/>
        </GroupBox>
        
        <!-- 按钮面板 -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btnOK" Content="确定" Style="{StaticResource ButtonStyle}" Click="BtnOK_Click"/>
            <Button Name="btnCancel" Content="取消" Style="{StaticResource ButtonStyle}" Click="BtnCancel_Click"/>
            <Button Name="btnHelp" Content="帮助" Style="{StaticResource ButtonStyle}" Click="BtnHelp_Click"/>
        </StackPanel>
    </Grid>
</Window>