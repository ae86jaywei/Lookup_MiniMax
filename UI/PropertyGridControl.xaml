<UserControl x:Class="ZWDynLookup.UI.PropertyGridControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    
    <UserControl.Resources>
        <Style x:Key="PropertyNameStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="PropertyValueStyle" TargetType="FrameworkElement">
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Height" Value="22"/>
        </Style>
        
        <Style x:Key="CategoryHeaderStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFE6E6E6"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="5,3"/>
        </Style>
        
        <Style x:Key="PropertyRowStyle" TargetType="Grid">
            <Setter Property="MinHeight" Value="25"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 对象选择器 -->
        <Border Grid.Row="0" Background="#FFF9F9F9" BorderBrush="#FFDDDDDD" BorderThickness="0,0,0,1" Padding="5,3">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="对象:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox Name="cmbObjectSelector" Width="200" Height="22" 
                          SelectionChanged="CmbObjectSelector_SelectionChanged"/>
                <Button Name="btnAddObject" Content="添加" Width="50" Height="22" Margin="10,0,0,0"
                       Click="BtnAddObject_Click"/>
                <Button Name="btnRemoveObject" Content="移除" Width="50" Height="22" Margin="5,0,0,0"
                       Click="BtnRemoveObject_Click"/>
            </StackPanel>
        </Border>
        
        <!-- 属性网格主体 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Name="spPropertyGrid">
                <!-- 动态生成属性项 -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>